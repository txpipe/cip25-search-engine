        "@remix-run/serve": "^1.1.1",
        "classnames": "^2.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.1.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.1.1",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "concurrently": "^6.5.1",
        "tailwindcss": "^3.0.8",
        "typescript": "^4.1.2"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false
